<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light.NoTitleBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    
    <style name="BasedFont" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="BasedFont.ExtraLarge" parent="BasedFont">
        <item name="android:textSize">30dp</item>    
    </style>
    
    <style name="BasedFont.Large" parent="BasedFont">
        <item name="android:textSize">24dp</item>    
    </style>
    
    <style name="BasedFont.Medium" parent="BasedFont">
        <item name="android:textSize">18dp</item>    
    </style>
    
    <style name="BasedFont.Small" parent="BasedFont">
        <item name="android:textSize">14dp</item>    
    </style>
    
    <style name="BasedFont.ExtraSmall" parent="BasedFont">
        <item name="android:textSize">10dp</item>    
    </style>

    <style name="SmallFont" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
